let currencies= {};
async function loadCurrencies() {
  
  const url="https://api.currencyapi.com/v3/latest?apikey=cur_live_Hae8LiE69KFnT1v9XUyDzpvSdiz9ncFvVcvvHJXz&base_currency=USD"
  try {
    const response = await fetch(url);
    const data = await response.json();
    

    const currencies = data.data;
    const fromSelect = document.getElementById("currency");
    const toSelect = document.getElementById("currency1");

    for (const code in currencies) {
      const currencyName = currencies[code].name||code ;

      const option1 = document.createElement("option");
      option1.value = code;
      option1.textContent =` ${code} - ${currencyNames[code]}`;
      fromSelect.appendChild(option1);

      const option2 = document.createElement("option");
      option2.value = code;
      option2.textContent = `${code} - ${currencyNames[code]}`;
      toSelect.appendChild(option2);

      
    }

    fromSelect.value = "USD";
    toSelect.value = "INR";
    
    fromSelect.addEventListener("change",(evt) =>{
      updateFlag(evt.target);
    });
    toSelect.addEventListener("change",(evt) =>{
      updateFlag(evt.target);
    });
    
    updateFlag(fromSelect);
    updateFlag(toSelect);

  } catch (error) {
    console.error("Failed to load currencies:", error);
  }
}

const updateFlag = (element) => {
 const currCode = element.value;
 const countrycode = countryList[currCode];
 if (!countrycode) return;
 
 const img = element.parentElement.querySelector("img");
 
 if(img){
  img.src=`https://flagsapi.com/${countrycode}/flat/64.png`;
 }
};



const populate = async (value, currency,currency1) => {
    let myStr = ""
    url = "https://api.currencyapi.com/v3/latest?apikey=cur_live_Hae8LiE69KFnT1v9XUyDzpvSdiz9ncFvVcvvHJXz&base_currency=" +currency
    let response = await fetch(url)
    let rJson = await response.json()
    document.querySelector(".output").style.display = "block"
    
    for (let key of Object.keys(rJson["data"])) {
        myStr += `    <tr>
                  <td>${key}</td>
                  <td>${rJson["data"][key]["code"]} - ${currencyNames[key] || "undefined"}</td>
                  <td>${(rJson["data"][key]["value"] * value)}</td>
                  </tr>  `

    }
    

    const tableBody = document.querySelector("tbody");
    tableBody.innerHTML = myStr;
    const rate = rJson.data[currency1].value;
   const result= value *rate;

    document.getElementById("resultBox").style.display = "block";
  document.getElementById("resultText").textContent =
   `${value} ${currency} = ${result} ${currency1}`;
   
}


const btn = document.querySelector(".btn")
btn.addEventListener("click", (e) => {
    e.preventDefault()
    const value = parseInt(document.querySelector("input[name='quantity']").value);
    const currency = document.querySelector("select[name='currency']").value
    let currency1 = document.getElementById("currency1").value;
   
    populate(value, currency,currency1)
})





window.onload = loadCurrencies;
    </script>
  
